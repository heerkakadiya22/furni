<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">
    <meta name="description" content />
    <meta name="keywords" content="bootstrap, bootstrap4" />
    <title>
        <%= title %>
    </title>
    <%- include('../partials/Head') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link rel="stylesheet" href="/assets/user/css/signup-style.css">
        <style>
            .signup-container label {
                position: relative;
                display: contents;
                margin-bottom: -1%;
            }

            .custom-outline {
                background-color: transparent !important;
                color: #3b5d50 !important;
                border: 1px solid #3b5d50 !important;
            }

            .custom-outline:hover {
                background-color: #3b5d50 !important;
                color: #fff !important;
            }
        </style>

</head>

<body>
    <%- include('../partials/header') %>

        <div class="hero">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-lg-5">
                        <div class="intro-excerpt">
                            <h1 id="form-heading">
                                <%= title %>
                            </h1>
                        </div>
                    </div>
                    <div class="col-lg-7"></div>
                </div>
            </div>
        </div>

        <section class="signup">
            <div class="signup-container">
                <div class="signup-content">

                    <!-- Register Form -->
                    <div id="register-section" class="signup-form" style="margin-left: 10px;     margin-right: 0px;">

                        <% if (success) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%= success %>
                            </div>
                            <% } %>

                                <% if (error) { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <%= error %>
                                    </div>
                                    <% } %>

                                        <form action="/user-profile" method="POST" enctype="multipart/form-data"
                                            id="editProfileForm" class="validate-form" novalidate>

                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                            <div class="text-center mb-4 position-relative"
                                                style="width: 150px; margin: auto;">

                                                <label for="imageUpload">
                                                    <img src="<%= image ? image : '/assets/admin/img/user/default.jpg' %>"
                                                        alt="User Avatar" id="previewImg" class="rounded-circle shadow"
                                                        style="width: 150px; height: 150px; object-fit: cover;" />

                                                </label>
                                                <input type="file" id="imageUpload" name="image" accept="image/*"
                                                    class="d-none" />
                                            </div>

                                            <div class="form-group mb-3">
                                                <input type="text" class="form-control" name="name" id="name"
                                                    placeholder="Full Name" value="<%= name %>" required />
                                            </div>

                                            <!-- Email & Phone -->
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <input type="email" class="form-control" name="email" id="email"
                                                        placeholder="Email" value="<%= email %>" required />
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <input type="text" class="form-control" name="phone" id="phone"
                                                        placeholder="Phone Number" value="<%= phone %>" />
                                                </div>
                                            </div>

                                            <!-- Username & Role -->
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="username" id="username"
                                                    placeholder="Username" value="<%= username %>" required />
                                            </div>

                                            <!-- Address -->
                                            <div class="form-group">
                                                <input type="text" name="address" id="address" class="form-control"
                                                    placeholder="Enter your address" value="<%= address %>" required />
                                            </div>

                                            <!-- DOB & Gender -->
                                            <div class="row">
                                                <!-- Date of Birth -->
                                                <div class="col-md-6 mb-3">
                                                    <label for="dob" class="form-label">Date of Birth</label>
                                                    <input type="date" class="form-control" name="dob" id="dob"
                                                        value="<%= dob %>" />
                                                </div>

                                                <!-- Gender -->
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label d-block mb-3 me-4">Gender</label>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            value="Male" id="genderMale" <%=gender==='male' ? 'checked'
                                                            : '' %>
                                                        />
                                                        <label class="form-check-label" for="genderMale">Male</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            value="Female" id="genderFemale" <%=gender==='female'
                                                            ? 'checked' : '' %>
                                                        />
                                                        <label class="form-check-label"
                                                            for="genderFemale">Female</label>
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="form-group form-button">
                                                <input type="submit" class="btn btn-primary" value="Update Profile" />
                                            </div>



                                            <p>Want to <a href="/user-changePassword">Change Password</a> ?
                                            </p>

                                        </form>
                    </div>

                    <div class="signup-image" style="    margin: 0 0px;">
                        <figure><img src="/assets/user/images/sofap.png" alt="signup image" style="margin-top: 43%;">
                        </figure>
                        <div class="form-group form-button" style="margin-left: 30%;">
                            <a href="/user-address">
                                <input type="button" class="btn btn-outline-primary custom-outline" value="Add Address"
                                    style="width: 60%;" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
            <%- include('../partials/script') %>
                <!-- JS -->
                <script src="/assets/user/vendor/jquery/jquery.min.js"></script>
                <script src="/assets/user/js/alertmsg.js"></script>
                <script
                    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
                <script src="../assets/admin/vendor/libs/jquery/jquery-validation.js"></script>
                <script src="../assets/admin/vendor/js/custom.js"></script>


</body>

</html>