<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">
    <meta name="description" content />
    <meta name="keywords" content="bootstrap, bootstrap4" />
    <title>
        <%= title %>
    </title>
    <%- include('../partials/Head') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <link rel="stylesheet" href="/assets/user/css/signup-style.css">
        <style>

        </style>

</head>

<body>
    <%- include('../partials/header') %>

        <div class="hero">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-lg-5">
                        <div class="intro-excerpt">
                            <h1 id="form-heading">
                                <%= title %>
                            </h1>
                        </div>
                    </div>
                    <div class="col-lg-7"></div>
                </div>
            </div>
        </div>

        <section class="signup">
            <div class="signup-contain" style="width: 80%;">
                <div class="signup-content" style="margin-top: -15%;">

                    <div class="signup-form" style="width: 38%;">
                        <!-- Saved Addresses -->
                        <div class="saved-addresses mb-4">
                            <h3 class="mb-3 fw-bold">Saved Addresses</h3>
                            <% if (addresses && addresses.length> 0) { %>
                                <% addresses.forEach((addr)=> { %>
                                    <div
                                        class="saved-address d-flex align-items-start justify-content-between p-3 mb-2 border rounded shadow-sm">
                                        <!-- Left: Radio + Address Info -->
                                        <div class="d-flex align-items-start">
                                            <input type="radio" name="selectedAddress"
                                                class="form-check-input me-3 mt-1 address-radio" value="<%= addr.id %>"
                                                data-addr='<%- JSON.stringify(addr) %>' <%=addr.isDefault ? "checked"
                                                : "" %>
                                            >

                                            <div>
                                                <label class="mb-1 fw-semibold" style="cursor:pointer; font-size:1rem;">
                                                    <%= addr.fullName %>
                                                </label>
                                                <p class="mb-0 text-muted" style="font-size:0.875rem;">
                                                    <%= addr.no %>, <%= addr.street %>, <%= addr.city %>, <%= addr.state
                                                                    %> - <%= addr.zipCode %>
                                                </p>
                                                <p class="mb-0 text-muted" style="font-size:0.75rem;">
                                                    <small>Type: <%= addr.type %></small>
                                                </p>
                                                <% if (addr.isDefault) { %>
                                                    <span class="default-badge">
                                                        <i class="bi bi-check-circle-fill"></i> Default Address
                                                    </span>
                                                    <% } %>
                                            </div>
                                        </div>

                                        <input type="hidden" id="csrfToken" value="<%= csrfToken %>">
                                        <button type="button" class="delete-address-btn btn btn-link p-0 text-dark"
                                            data-id="<%= addr.id %>"
                                            style="font-size:1.2rem; background: transparent;border:none; cursor:pointer;">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <p class="text-muted">No saved addresses yet.</p>
                                            <% } %>
                        </div>

                        <!-- Add New Address -->
                        <div class="card shadow-sm p-2 mb-4 border rounded-2">
                            <div class="d-flex align-items-center justify-content-start px-3 py-2">
                                <input type="radio" name="selectedAddress" value="new" id="newAddress"
                                    class="form-check-input me-3" style="transform: scale(1.1); cursor:pointer;"
                                    <%=(!addresses || addresses.length===0) ? "checked" : "" %>
                                >
                                <label for="newAddress" class="fw-semibold text-primary mb-0"
                                    style="cursor:pointer; font-size:1.1rem;">
                                    + Add New Address
                                </label>
                            </div>
                        </div>

                    </div>

                    <hr>



                    <!-- Address Form -->
                    <div class="address-form-container">
                        <div class="form-header mb-3">
                            <a href="javascript:history.back()" class="btn-back-custom d-inline-flex align-items-center"
                                style="margin-left: 76%;">
                                <i class="bi bi-arrow-left me-2"></i> Go Back
                            </a>
                        </div>
                        <div class="form-body">
                            <% if (success) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <%= success %>
                                </div>
                                <% } %>
                                    <% if (error) { %>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <%= error %>
                                        </div>
                                        <% } %>
                                            <form action="/user-address" method="POST" id="addressForm"
                                                class="validation-form" novalidate>


                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <input type="hidden" name="user_id" value="<%= user_id %>">
                                                <input type="hidden" name="id" id="addressId"
                                                    value="<%= editAddress ? editAddress.id : '' %>">

                                                <div class="form-group mb-3">
                                                    <input type="text" class="form-control" name="name" id="name"
                                                        placeholder="Full Name"
                                                        value="<%= editAddress ? editAddress.fullName : '' %>"
                                                        required />
                                                </div>

                                                <div class="form-group mb-3">
                                                    <label for="number" class="form-label">Contact Number</label>
                                                    <input type="text" class="form-control" name="number" id="number"
                                                        placeholder="Enter contact number"
                                                        value="<%= editAddress ? editAddress.number : '' %>" required />
                                                </div>



                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="type" class="form-label">Address Type</label>
                                                        <select name="type" id="type" class="form-control custom-select"
                                                            required>
                                                            <option value="">Select Type</option>
                                                            <option value="Home" <%=editAddress &&
                                                                editAddress.type==="Home" ? 'selected' : '' %>>Home
                                                            </option>
                                                            <option value="Office" <%=editAddress &&
                                                                editAddress.type==="Office" ? 'selected' : '' %>>Office
                                                            </option>
                                                            <option value="Other" <%=editAddress &&
                                                                editAddress.type==="Other" ? 'selected' : '' %>>Other
                                                            </option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="no" class="form-label">House / Flat No.</label>
                                                        <input type="text" class="form-control" name="no" id="no"
                                                            placeholder="Enter house or flat number"
                                                            value="<%= editAddress ? editAddress.no : '' %>" required />
                                                    </div>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <label for="street" class="form-label">Street</label>
                                                    <textarea name="street" id="street" cols="30" rows="2"
                                                        placeholder="Enter street name" class="form-control" required>
                                                        <%= editAddress ? editAddress.street : '' %>
                                                    </textarea>
                                                </div>

                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="state" class="form-label">State</label>
                                                        <select name="state" id="state"
                                                            class="form-control custom-select" required>
                                                            <option value="">Select State</option>
                                                        </select>
                                                    </div>

                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="city" class="form-label">City</label>
                                                        <select name="city" id="city" class="form-control custom-select"
                                                            required>
                                                            <option value="">Select City</option>
                                                        </select>
                                                    </div>
                                                </div>


                                                <div class="row">
                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="country" class="form-label">Country</label>
                                                        <input type="text" class="form-control" name="country"
                                                            id="country" placeholder="Enter country"
                                                            value="<%= editAddress ? editAddress.country : '' %>"
                                                            required />
                                                    </div>

                                                    <div class="form-group col-md-6 mb-3">
                                                        <label for="zipCode" class="form-label">Zip Code</label>
                                                        <input type="text" class="form-control" name="zipCode"
                                                            id="zipCode" placeholder="Enter zip code"
                                                            value="<%= editAddress ? editAddress.zipCode : '' %>"
                                                            required />
                                                    </div>

                                                </div>
                                                <div class="form-group ">
                                                    <label for="landMark" class="form-label">Landmark (optional)</label>
                                                    <textarea name="landMark" id="landMark" cols="30" rows="2"
                                                        placeholder="Enter landmark" class="form-control">
                                                        <%= editAddress ? editAddress.landMark : '' %>
                                                    </textarea>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <div class="form-check">
                                                        <input type="checkbox" name="isDefault" id="isDefault"
                                                            class="form-check-input" <%=editAddress &&
                                                            editAddress.isDefault ? 'checked' : '' %> />
                                                        <label class="form-check-label" for="isDefault">Set as default
                                                            address</label>
                                                    </div>
                                                </div>

                                                <div class="form-group form-button">
                                                    <input type="submit" class="btn btn-primary"
                                                        value="<%= editAddress ? 'Update Address' : 'Add Address' %>" />
                                                </div>
                                            </form>
                        </div>
                    </div>


                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
            <%- include('../partials/script') %>

                <script src="/assets/user/js/address_script.js"></script>
                <!-- JS -->
                <script src="/assets/user/vendor/jquery/jquery.min.js"></script>
                <script src="/assets/user/js/alertmsg.js"></script>
                <script
                    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
                <script src="/assets/admin/vendor/libs/jquery/jquery-validation.js"></script>
                <script src="/assets/admin/vendor/js/custom.js"></script>

</body>

</html>