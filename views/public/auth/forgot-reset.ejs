<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="author" content="Untree.co">
        <link rel="shortcut icon" href="/favicon.png">
        <meta name="description" content />
        <meta name="keywords" content="bootstrap, forgot password" />
        <title><%= title %></title>

        <%- include('../partials/Head') %>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
            rel="stylesheet">

        <link rel="stylesheet" href="/assets/user/css/custom.css">

    </head>

    <body>
        <%- include('../partials/header') %>

        <div class="hero">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-lg-5">
                        <div class="intro-excerpt">
                            <h1>Forgot Password</h1>
                            <p class="mt-3">Enter your email to receive a
                                password reset link.</p>
                        </div>
                    </div>
                    <div class="col-lg-7"></div>
                </div>
            </div>
        </div>

        <section class="signup">
            <div class="signup-container">
                <div class="signup-content">

                    <!-- Register Form -->
                    <div id="register-section"
                        class="<%= action === 'reset' ? 'd-none' : '' %>">

                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i>
                            <strong><%= error %></strong>
                        </div>
                        <% } %>

                        <form action="/forgot-password" method="POST"
                            id="forgotPasswordForm"
                            novalidate>
                            <input type="hidden" name="_csrf"
                                value="<%= csrfToken %>">

                            <div class="form-group mb-3">
                                <label for="email">Email address</label>
                                <input type="email" class="form-control"
                                    name="email" id="email" required
                                    placeholder="Enter your registered email">
                            </div>

                            <button type="submit"
                                class="btn btn-primary btn-block">Send Reset
                                Link</button>

                            <p class="mt-3 mb-1 text-center">
                                <a href="/auth?show=login">Back to Login</a>
                            </p>
                        </form>
                    </div>

                    <!-- Login Form -->
                    <div id="register-section"
                        class="<%= action === 'reset' ? '' : 'd-none' %>">

                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i>
                            <strong><%= error %></strong>
                        </div>
                        <% } %>

                        <form
                            action="/reset-password"
                            method="POST"
                            id="resetPasswordForm"
                            novalidate>

                            <p class="login-box-msg">Set your new password</p>

                            <input type="hidden" name="_csrf"
                                value="<%= csrfToken %>">

                            <div class="form-group mb-3">
                                <div class="input-group mb-3">

                                    <input
                                        type="password"
                                        class="form-control"
                                        placeholder="New Password"
                                        id="password"
                                        name="newPassword"
                                        required />

                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span
                                                onclick="togglePassword('password', 'eyeIcon1')"
                                                style="cursor: pointer;">
                                                <i id="eyeIcon1"
                                                    class="fa-solid fa-eye"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">

                                <div class="input-group mb-3">
                                    <input
                                        type="password"
                                        class="form-control"
                                        placeholder="Confirm Password"
                                        id="confirmPassword"
                                        name="confirmNewPassword"
                                        required />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span
                                                onclick="togglePassword('confirmPassword', 'eyeIcon2')"
                                                style="cursor: pointer;">
                                                <i id="eyeIcon2"
                                                    class="fa-solid fa-eye"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="submit"
                                class="btn btn-primary btn-block">Reset
                                Password</button>
                            <p class="mt-3 mb-1 text-center">
                                <a href="password">Back</a>

                                <p class="mt-3 mb-1 text-center">
                                    <a href="/auth?show=login">Back to Login</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            <%- include('../partials/footer') %>
            <%- include('../partials/script') %>

            <!-- JS -->
            <script src="/assets/user/vendor/jquery/jquery.min.js"></script>
            <script src="/assets/user/js/alertmsg.js"></script>
            <script
                src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
            <script
                src="/assets/user/vendor/jquery/jquery-validation.js"></script>

        </body>
    </html>
