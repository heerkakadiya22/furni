<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default" data-assets-path="../assets/"
    data-template="vertical-menu-template-free">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>

    <%- include('../partials/head') %>
        <!-- Optional custom CSS -->
        <link rel="stylesheet" href="/assets/admin/css/custom.css">
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../partials/sidebar') %>

                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">

                        <%- include('../partials/breadcrumbs', { breadcrumbs: breadcrumbs }) %>

                            <div class="card-body">
                                <% if (error) { %>
                                    <div class="alert alert-danger">
                                        <%= error %>
                                    </div>
                                    <% } %>

                                        <!-- Product Form -->
                                        <form
                                            action="<%= product ? '/products/' + product.id + '/edit' : '/addproduct' %>"
                                            method="POST" id="productForm" enctype="multipart/form-data" novalidate>

                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <% if (product) { %>
                                                <input type="hidden" name="id" value="<%= product.id %>">
                                                <% } %>

                                                    <!-- ========== Images ========== -->
                                                    <div class="row">
                                                        <!-- Main Image -->
                                                        <div class="mb-3 col-md-6" id="mainImgContainer">
                                                            <label class="form-label">Main Image</label>
                                                            <div id="dropZone" class="drop-zone">
                                                                <% if (product && product.main_img) { %>
                                                                    <img src="/assets/admin/img/products/<%= product.main_img %>"
                                                                        class="preview-img" id="mainImgPreview">
                                                                    <% } else { %>
                                                                        <div class="drop-zone-text" id="dropZoneText">
                                                                            <i
                                                                                class="fas fa-cloud-upload-alt fa-2x"></i>
                                                                            <p>Drop your image here, or <span
                                                                                    class="browse-link">browse</span>
                                                                            </p>
                                                                            <small>Supports: JPG, JPEG, PNG</small>
                                                                        </div>
                                                                        <% } %>
                                                                            <input type="file" name="main_img"
                                                                                id="main_img" accept="image/*" hidden>
                                                            </div>
                                                        </div>

                                                        <!-- Sub Images -->
                                                        <div class="mb-3 col-md-6" id="subImg">
                                                            <label class="form-label">Sub Images</label>
                                                            <div class="sub-img-grid" id="subImgContainer">
                                                                <% if (product && product.sub_img) { %>
                                                                    <% product.sub_img.split(",").forEach((img, index)=>
                                                                        { %>
                                                                        <div class="sub-img-preview">
                                                                            <label>
                                                                                <img src="/assets/admin/img/products/<%= img.trim() %>"
                                                                                    width="100">
                                                                                <input type="file"
                                                                                    name="replace_sub_img[<%= index %>]"
                                                                                    class="d-none replace-input"
                                                                                    accept="image/*">
                                                                                <input type="hidden"
                                                                                    name="replace_old_<%= index %>"
                                                                                    value="<%= img.trim() %>">
                                                                            </label>
                                                                        </div>
                                                                        <% }) %>
                                                                            <% } %>
                                                                                <!-- + button -->
                                                                                <button type="button"
                                                                                    class="sub-img-upload"
                                                                                    id="addSubImgBtn"><span>+</span></button>
                                                                                <div id="subImgInputs"
                                                                                    style="display:none;"></div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- ========== Basic Info ========== -->
                                                    <div class="row">
                                                        <div class="mb-3 col-md-4">
                                                            <label class="form-label" for="category_id">Category</label>
                                                            <select class="form-select" name="category_id"
                                                                id="category_id" required>
                                                                <option value="">Select Category</option>
                                                                <% categories.forEach(cat=> { %>
                                                                    <option value="<%= cat.id %>" <%=product &&
                                                                        product.category_id===cat.id ? "selected" : ""
                                                                        %>>
                                                                        <%= cat.name %>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </div>

                                                        <div class="mb-3 col-md-8">
                                                            <label class="form-label" for="name">Product Name</label>
                                                            <input type="text" class="form-control" name="name"
                                                                id="name" value="<%= product ? product.name : '' %>"
                                                                required />
                                                        </div>
                                                    </div>

                                                    <!-- ========== Material & Dimension ========== -->
                                                    <div class="row">
                                                        <div class="mb-3 col-md-6">
                                                            <label class="form-label" for="material">Material</label>
                                                            <input type="text" class="form-control" name="material"
                                                                id="material"
                                                                value="<%= product ? product.material : '' %>">
                                                        </div>

                                                        <div class="mb-3 col-md-6">
                                                            <label class="form-label" for="dimention">Dimension</label>
                                                            <input type="text" class="form-control" name="dimention"
                                                                id="dimention"
                                                                value="<%= product ? product.dimention : '' %>">
                                                        </div>
                                                    </div>

                                                    <!-- ========== Prices ========== -->
                                                    <div class="row">
                                                        <div class="mb-3 col-md-6">
                                                            <label class="form-label" for="oldPrice">Old Price</label>
                                                            <input type="number" step="0.01" class="form-control"
                                                                name="oldPrice" id="oldPrice"
                                                                value="<%= product ? product.oldPrice : '' %>">
                                                        </div>

                                                        <div class="mb-3 col-md-6">
                                                            <label class="form-label" for="newPrice">New Price</label>
                                                            <input type="number" step="0.01" class="form-control"
                                                                name="newPrice" id="newPrice"
                                                                value="<%= product ? product.newPrice : '' %>" required>
                                                        </div>
                                                    </div>

                                                    <!-- ========== Description ========== -->
                                                    <div class="mb-3">
                                                        <label class="form-label" for="description">Description</label>
                                                        <textarea class="form-control" name="description"
                                                            id="description" rows="3">
                                                            <%= product ? product.description : '' %>
                                                        </textarea>
                                                    </div>

                                                    <!-- ========== Color & Tags ========== -->
                                                    <div class="row">
                                                        <div class="mb-3 col-md-3">
                                                            <label class="form-label fw-semibold" for="color">Choose
                                                                Color</label>
                                                            <div class="color-picker-box d-flex">
                                                                <input type="color" id="colorPicker"
                                                                    value="<%= product ? product.color : '#000000' %>"
                                                                    class="form-control form-control-color me-2">
                                                                <input type="text" id="colorHex" class="form-control"
                                                                    value="<%= product ? product.color : '#000000' %>"
                                                                    readonly>
                                                                <input type="hidden" name="color" id="colorHidden"
                                                                    value="<%= product ? product.color : '#000000' %>">
                                                            </div>
                                                        </div>

                                                        <div class="mb-3 col-md-9">
                                                            <label class="form-label" for="tags">Tags (comma
                                                                separated)</label>
                                                            <input type="text" class="form-control" name="tags"
                                                                id="tags" value="<%= product ? product.tags : '' %>">
                                                        </div>
                                                    </div>

                                                    <!-- ========== Active & Submit ========== -->
                                                    <div class="form-check mb-3">
                                                        <input class="form-check-input" type="checkbox" name="isActive"
                                                            id="isActive" <%=!product || product.isActive ? "checked"
                                                            : "" %>>
                                                        <label class="form-check-label" for="isActive">Active</label>
                                                    </div>

                                                    <div class="d-grid">
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="bx bx-save"></i>
                                                            <%= product ? "Save Changes" : "Create Product" %>
                                                        </button>
                                                    </div>
                                        </form>


                                        <div class="text-center mt-3">
                                            <a href="/products" class="btn btn-outline-secondary">
                                                <i class="bx bx-left-arrow-alt"></i> Back to Product List
                                            </a>
                                        </div>
                            </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>
                    <div class="content-backdrop fade"></div>
        </div>
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <%- include('../partials/script') %>

        <!-- jQuery Validate -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="/assets/admin/vendor/libs/jquery/jquery-validation.js"></script>
        <script src="/assets/admin/vendor/js/custom.js"></script>
        <script src="/assets/admin/vendor/js/product.js"></script>
        <script>
            //color picker
            const colorPicker = document.getElementById("colorPicker");
            const colorHex = document.getElementById("colorHex");
            const colorHidden = document.getElementById("colorHidden");

            // Update hex when color changes
            colorPicker.addEventListener("input", () => {
                colorHex.value = colorPicker.value.toUpperCase();
                colorHidden.value = colorPicker.value.toUpperCase();
            });</script>
</body>

</html>